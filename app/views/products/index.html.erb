<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Products</h2>
    <a class="btn btn-primary" href="/products/new">Add Product</a>
  </div>

  <% if @products && @products.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Category</th>
          <th>Brand</th>
          <th>Year</th>
          <th>Price</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |p| %>
          <tr>
            <td><%= p.id %></td>
            <td><%= p.name %></td>
            <td><%= Category.find_by_id(p.category_id)&.name %></td>
            <td><%= p.brand %></td>
            <td><%= p.year %></td>
            <td><%= p.price %></td>
            <td><%= p.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info">No products yet.</div>
  <% end %>
</div>
